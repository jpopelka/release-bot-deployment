---
kind: DeploymentConfig
apiVersion: v1
metadata:
  labels:
    app: packit
    name: packit-service
  name: packit-service
spec:
  template:
    metadata:
      labels:
        name: packit-service
        app: packit
    spec:
      volumes:
      - name: packit-secrets
        secret:
          secretName: packit-secrets
      - name: packit-config
        secret:
          secretName: packit-config
      - name: httpd-conf
        configMap:
          name: httpd-conf
      containers:
        - name: packit-service
          image: docker.io/usercont/packit-service:master
          ports:
          - containerPort: 8443
            protocol: TCP
          env:
           - name: DEPLOYMENT
             value: {{ deployment }}
           - name: REDIS_SERVICE_HOST
             value: redis
          volumeMounts:
          - name: packit-secrets
            mountPath: /secrets
          - name: packit-config
            mountPath: /home/packit/.config
          - name: httpd-conf
            mountPath: /etc/httpd/conf.d/httpd-packit.conf
            subPath: httpd-packit.conf
          command:
            - "/usr/bin/run-httpd"
          resources:
            requests:
              memory: "128Mi"
              cpu: "100m"
            limits:
              memory: "256Mi"
              cpu: "200m"
          # In TLS world, hostname needs to match whatever is set in the cert
          # in our cause, k8s is doing here something like curl https://172.15.2.4:8443/healthz
          # which will fail TLS validation.
          # So we need to connect to prod.packit.dev.
          #   Liveness probe failed: Get https://10.131.30.42:8443/healthz: local error: tls: no renegotiation
          # Comment probes out, they just don't work.
          # readinessProbe:
          #   httpGet:
          #     host: {{ deployment }}.packit.dev
          #     scheme: HTTPS
          #     path: /healthz
          #   initialDelaySeconds: 10
          # livenessProbe:
          #   httpGet:
          #     host: {{ deployment }}.packit.dev
          #     scheme: HTTPS
          #     path: /healthz
          #   initialDelaySeconds: 30
  replicas: 1
  strategy:
    type: Recreate
